{
  "name": "niu_auction",
  "productName": "NiuAuction",
  "version": "1.2.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cd web_src && cyb dev",
    "start": "sed -i '' 's/dev = false/dev = true/g' index.js && electron --inspect=5858 .",
    "dist:mac": "sed -i '' 's/dev = true/dev = false/g' index.js && electron-builder --mac",
    "dist:win": "sed -i '' 's/dev = true/dev = false/g' index.js && electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/niuxg/niu_auction.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/niuxg/niu_auction/issues"
  },
  "homepage": "https://gitlab.com/niuxg/niu_auction#readme",
  "devDependencies": {
    "appdmg": "^0.6.0",
    "electron": "^9.1.0",
    "electron-builder": "^20.43.0",
    "electron-packager": "^13.1.1",
    "wine": "^0.9.8"
  },
  "build": {
    "appId": "niuweb.niu_auction",
    "copyright": "NiuWeb",
    "productName": "NiuAuction",
    "directories": {
      "output": "dist/${version}",
      "app": "build"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "NiuWebAuction.icns",
      "artifactName": "${productName}.${ext}",
      "identity": null
    },
    "dmg": {
      "icon": "NiuWebAuction.icns"
    },
    "win": {
      "target": "portable",
      "icon": "NiuWebAuction.ico",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "NiuWebAuction.ico",
      "uninstallerIcon": "NiuWebAuction.ico"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  },
  "dependencies": {
    "electron-updater": "^4.1.2",
    "exceljs": "^1.14.0"
  }
}
